extends layout

include mixins
include mixins.jade
include mixin-radios.jade
include mixin-inputs.jade

block content
  h1= title
  p Welcome to #{title}

  +attribution

  +bio

  +elfFormPanel("Main Form")#target

    +elfRadioPanel("Radio Buttons")
      +elfRadio("Seven Samurai", "option1")
      +elfRadio("Ran", "option2")
      +elfRadio("Rashomon", "option3")
      +elfRadio("High and Low", "option4")
      +elfRadio("Ikiru", "option5")

    +elfPanel("CheckBoxes")
      +elfCheckBox("Kurosawa", "kurosawa", "kurosawa")#kurosawa
      +elfCheckBox("Tolstoy", "tolstoy", "tolstoy")#tolstoy
      +elfCheckBox("Mifune", "mifune", "mifune")#mifune

    +elfPanel("Input")
      +elfInput("Enter a name", "subject", "Enter a subject")#subject.form-control

    +elfPanel("Actions")
      input.btn.btn-primary(type="submit", value="Go")

  div
    pre#formResults

  div
    pre#serverResults